<div class="department-body">
    <div class="pure-g">
        <div class="pure-u">
            <ul class="breadcrumb">
                <li>
                  <%= link_to('Home', root_url, {}) %>
                  <span class="divider">-</span>
                </li>
                <li class="active">
                    <%= @department.deptName %>
                </li>

            </ul>
            <h1>
                <%= link_to(@department.deptCode+' - '+@department.deptName, 'departments/'+@department.deptCode, {}) %>

            </h1>

            <h1 class="muted">
                courses
            </h1>
        </div>

    </div>

            <div class='course_list'>
                <% @courses.each do |c| %>
                    <table class='table table-hover table-condensed course-table'>
                        <tbody>
                            <tr class='course'>
                                <div class="pure-g">
                                    <div class="pure-u-1-4">
                                        <%= c.department %>-<%= c.courseCode %>
                                    </div>

                                  <div class="pure-u-1-2">
                                    <%= link_to(c.name, '/courses'+'/'+c.department+'/'+c.courseCode, {}) %>
                                  </div>

                                  <div class="pure-u-1-4">
                                    <%= c.credits %>
                                  </div>
                                </div>

                            </tr>
                        </tbody>
                    </table>
                <% end %>
            </div>
            <p>
              <strong>Department Code:</strong>

            </p>

            <p>
              <strong>Name:</strong>
              <%= @department.deptName %>
            </p>

</div>
